
def dodawanie(arg1, arg2):
        wynik = arg1 + arg2
        print "jesli dodasz %r do %r to wyjdzie %r" % (arg1, arg2, wynik)
        
def odejmowanie(arg1, arg2):
        wynik = arg1 - arg2
        print "odejmujac %r od %r wyjdzie %r" % (arg1, arg2, wynik)

print "podaj pierwsza zmienna:"
arg1 = input("?")
print "podaj druga zmienna:"
arg2 = input("?")

dodawanie(arg1, arg2)
odejmowanie(arg1, arg2)
